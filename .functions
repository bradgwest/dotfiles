create-pkcs8-key() {
  openssl genrsa -out $1.pem 4096
  openssl rsa -in $1.pem -pubout -out $1-pub.pem
  openssl pkcs8 -topk8 -inform PEM -outform PEM -nocrypt -in $1.pem -out $1-pkcs8.pem
}

